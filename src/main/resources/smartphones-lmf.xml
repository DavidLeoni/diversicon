<?xml version="1.0" encoding="UTF-8"?
  xmlns:sm="https://github.com/DavidLeoni/diversicon/tree/master/src/main/resources/smartphones-lmf.xml"
  xmlns:wn31="https://github.com/DavidLeoni/diversicon-wordnet-3.1/blob/master/src/main/resources/it/unitn/disi/diversicon/data/div-wn31.xml.xz">  
<!DOCTYPE LexicalResource PUBLIC  "Diversicon DTD" "https://github.com/DavidLeoni/diversicon/tree/master/src/main/resources/diversicon-1.0.dtd">

<!-- 

Simple example of an LMF file, formalizing smartphones taken from 
an imaginary terminology file "smartphones.csv", and linking them to WordNet 3.1.
 
Since in UBY IDs are global, we prepend everything with a prefix. In this case we chose 'sm'.
NOTE: here we are abusing XML namespaces, they should only be for tags and attributes
(like <my-namespace:mytag my-namespace:myAttribute="bla bla">) but
we also use them for tag IDs: <tag id="my-namespace:bla"> ...
 
 
             wn31:cellphone    http://wordnetweb.princeton.edu/perl/webwn?s=cellphone     
					^
					|
             sm01:smartphone
					^
					|
              sm01:phablet
					^
			 		|
             sm01:quantumlet
	
-->

<LexicalResource dtdVersion="1.0" name="sm:lr">	
    <GlobalInformation label="Example of an LMF file"/>       
    
    <MetaData metaDataId="sm:"
    		  creationDate=""
    		  creationTool="text editor"
    		  version="1.0"   
    		  creationProcess="by hand"
    		  automatic="false"
    		  lexicalResourceId="sm:lr"/>    
    
    <Lexicon languageIdentifier="eng" id="sm:lex-eng" name="Smartphone English lexicon">
        <LexicalEntry id="sm:le-smartphone" partOfSpeech="noun">
            <Lemma>
                <FormRepresentation languageIdentifier="eng" writtenForm="smartphone"/>
            </Lemma>
            <Sense id="sm:s-smartphone" index="1" synset="sm01:ss-phablet">
                <MonolingualExternalRef externalSystem="handheld-devices" externalReference="3rd row, fourth column in CSV"/>
            </Sense>
        </LexicalEntry>
        <LexicalEntry id="sm:le-phablet" partOfSpeech="noun">
            <Lemma>
                <FormRepresentation languageIdentifier="eng" writtenForm="phablet"/>
            </Lemma>
            <Sense id="sm:s-phablet" index="1" synset="sm:ss-phablet">
                <MonolingualExternalRef externalSystem="handheld-devices" externalReference="2nd row 5th column in csv of origin"/>
            </Sense>
        </LexicalEntry>

        <LexicalEntry id="sm:le-dumblet" partOfSpeech="noun">
            <Lemma>
                <FormRepresentation languageIdentifier="eng" writtenForm="dumblet"/>
            </Lemma>
            <Sense id="sm:s-dumblet" index="1" synset="sm:ss-dumblet">
                <MonolingualExternalRef externalSystem="handheld-devices" externalReference="1st row 3rd column in csv of origin"/>
            </Sense>
        </LexicalEntry>

       
        <Synset id="sm:ss-smartphone">
            <Definition>
                <TextRepresentation languageIdentifier="eng" writtenText="A cellphone designed to lock your eyes to the screen, even when you walk"/>
            </Definition>
            <!-- here we state our fat cellphone has as hypernym Wordnet 3.1 'cellphone':
            	 http://wordnetweb.princeton.edu/perl/webwn?s=cellphone
            	 which is defined in an external file
            -->
            <SynsetRelation target="wn31:ss-2123649" relType="taxonomic" relName="hypernym"/>
            <MonolingualExternalRef externalSystem="wn31" externalReference="[POS: noun] 2123649"/>
        </Synset>
        <Synset id="sm:ss-phablet">
            <Definition>
                <TextRepresentation languageIdentifier="eng" writtenText="An unholy union between a smartphone and a tablet"/>
            </Definition>			           
            <SynsetRelation target="sm01:ss-smartphone" relType="taxonomic" relName="hypernym"/>
            <MonolingualExternalRef externalSystem="wn31" externalReference="[POS: noun] 2123649"/>
        </Synset>
        <Synset id="sm:ss-quantumlet">
            <Definition>
                <TextRepresentation languageIdentifier="eng" writtenText="The final handheld device that will completely replace your mind."/>
            </Definition>			            
            <SynsetRelation target="sm:ss-quantumlet" relType="taxonomic" relName="hypernym"/>
			<MonolingualExternalRef externalSystem="wn31" externalReference="[POS: noun] 2123649"/>
        </Synset>

       
    </Lexicon>
</LexicalResource>
