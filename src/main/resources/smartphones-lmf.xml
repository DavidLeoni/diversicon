<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE LexicalResource PUBLIC  "Diversicon DTD" "https://github.com/DavidLeoni/diversicon/tree/master/src/main/resources/diversicon-1.0.dtd">

<!-- 

  Simple example of an LMF file, formalizing smartphones taken from 
  an imaginary terminology file "smartphones.csv", and linking them to WordNet 3.1.
 
 
  Since in UBY IDs are global, when merging multiple sources into the db we
  must prepend everything with a prefix. In this example we chose 'sm',
  while for Wordnet 3.1 we used 'wn31'. Note that currently we don't require
  any specific format for prefixes nor namespace urls, so version numbers 
  are not mandatory and urls are not required to be resolvable nor persistent.
        
  
 
             wn31:cellphone    http://wordnetweb.princeton.edu/perl/webwn?s=cellphone     
                    ^
                    |
              sm:smartphone
                    ^
                    |
               sm:phablet
                    ^
                    |
              sm:phoneborg
	 
-->

<LexicalResource name="sm"
  				 xmlns:sm="https://github.com/DavidLeoni/diversicon/tree/master/src/main/resources/smartphones-lmf.xml"
  				 xmlns:wn31="https://github.com/DavidLeoni/diversicon-wordnet-3.1/blob/master/src/main/resources/it/unitn/disi/diversicon/data/div-wn31.xml.xz">	
    <GlobalInformation label="Example smartphone terminology linked to Wordnet 3.1"/>       
    
    <MetaData id="sm:md"
    		  creationDate=""
    		  creationTool="text editor"
    		  version="1.0"   
    		  creationProcess="by hand"
    		  automatic="false"
    		  />    
    
    <!-- 
    	
    	lexicalResourceId="sm:lr"
     -->
    <Lexicon id="sm:lex-eng"
    		 languageIdentifier="eng" 
    		 name="Smartphone English lexicon">
    		 
        <LexicalEntry id="sm:le-smartphone" 
        			  partOfSpeech="noun">
            <Lemma>
                <FormRepresentation languageIdentifier="eng" 
                					writtenForm="smartphone"/>
            </Lemma>
            <Sense id="sm:s-smartphone" 
            	   synset="sm:ss-phablet">
                <MonolingualExternalRef externalSystem="smartphones" 
                						externalReference="3rd row, fourth column in CSV"/>
            </Sense>
        </LexicalEntry>
        <LexicalEntry id="sm:le-phablet" 
        			  partOfSpeech="noun">
            <Lemma>
                <FormRepresentation languageIdentifier="eng" 
                					writtenForm="phablet"/>
            </Lemma>
            <Sense id="sm:s-phablet" 
            	   synset="sm:ss-phablet">
                <MonolingualExternalRef externalSystem="smartphones" 
                						externalReference="2nd row 5th column in csv of origin"/>
            </Sense>
        </LexicalEntry>

        <LexicalEntry id="sm:le-phoneborg" 
                      partOfSpeech="noun">
            <Lemma>
                <FormRepresentation languageIdentifier="eng"
                				    writtenForm="phoneborg"/>
            </Lemma>
            <Sense id="sm:s-phoneborg" index="1" 
            						   synset="sm:ss-phoneborg">
                <MonolingualExternalRef externalSystem="smartphones" 
                						externalReference="1st row 3rd column in csv of origin"/>
            </Sense>
        </LexicalEntry>

       
        <Synset id="sm:ss-smartphone">
            <Definition>
                <TextRepresentation languageIdentifier="eng" 
                					writtenText="A cellphone designed to keep your eyes locked to a screen."/>
            </Definition>
            <!-- here we state our fat cellphone has as hypernym Wordnet 3.1 'cellphone':
            	 http://wordnetweb.princeton.edu/perl/webwn?s=cellphone
            	 which is defined in an external file
            -->
            <SynsetRelation target="wn31:ss-2123649" 
            				relType="taxonomic" 
            				relName="hypernym"/>
            <MonolingualExternalRef externalSystem="wn31" 
            						externalReference="[POS: noun] 2123649"/>
        </Synset>
        <Synset id="sm:ss-phablet">
            <Definition>
                <TextRepresentation languageIdentifier="eng" 
                					writtenText="An unholy union between a smartphone and a tablet"/>
            </Definition>			           
            <SynsetRelation target="sm:ss-smartphone" 
            				relType="taxonomic" 
            				relName="hypernym"/>
            <MonolingualExternalRef externalSystem="wn31" 
            						externalReference="[POS: noun] 2123649"/>
        </Synset>
        <Synset id="sm:ss-phoneborg">
            <Definition>
                <TextRepresentation languageIdentifier="eng"
                				    writtenText="The ultimate handheld that will completely replace your mind."/>
            </Definition>			            
            <SynsetRelation target="wn31:ss-phablet" 
            				relType="taxonomic" 
            				relName="hypernym"/>
			<MonolingualExternalRef externalSystem="wn31" 
									externalReference="[POS: noun] 2123649"/>
        </Synset>

       
    </Lexicon>
</LexicalResource>
