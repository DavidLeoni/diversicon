<?xml version="1.0" encoding="UTF-8"?>

<!-- Complex example of an LMF file, containing all possible tags -->

<LexicalResource
	name="examplicon"		
	prefix="ex"	
	xmlns:ex="https://github.com/DavidLeoni/diversicon/tree/master/src/main/resources/examplicon.lmf.xml"
	xmlns:wn31="https://github.com/DavidLeoni/diversicon-wordnet-3.1/blob/master/src/main/resources/it/unitn/disi/diversicon/data/div-wn31.lmf.xml.xz"
	 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://github.com/DavidLeoni/diversicon/tree/master/src/main/resources/diversicon-1.0.xsd">

	<GlobalInformation label="The Examplicon"></GlobalInformation>

    <Lexicon id="ex_lex-eng"
    		 languageIdentifier="eng" 
    		 name="Examplicon English lexicon">
    		 
        <LexicalEntry id="ex_le-electric-car" 
        			  partOfSpeech="noun">
            <Lemma>
                <FormRepresentation languageIdentifier="eng" 
                					writtenForm="electric car"/>
            </Lemma>
            <Sense id="ex_s-electric-car" 
            	   synset="ex_ss-electric-car">
                <MonolingualExternalRef externalSystem="cars" 
                						externalReference="3rd row, fourth column in CSV"/>
            </Sense>
        </LexicalEntry>

		<LexicalEntry id="ex_le-tesla-car" 
        			  partOfSpeech="noun">
            <Lemma>
                <FormRepresentation languageIdentifier="eng" 
                					writtenForm="tesla car"/>
            </Lemma>
            <Sense id="ex_s-tesla-car" 
            	   synset="ex_ss-tesla-car">
                <MonolingualExternalRef externalSystem="cars" 
                						externalReference="3rd row, fourth column in CSV"/>
            </Sense>
        </LexicalEntry>

		        
		<Synset id="ex_ss-electric-car">
            <Definition>
                <TextRepresentation languageIdentifier="eng" 
                					writtenText="A car that doesn't poison you."/>
            </Definition>

            <MonolingualExternalRef externalSystem="cars" 
              						externalReference="7st row 2rd column in csv of origin"/>
              						
            <SynsetRelation target="wn31_ss-6666666" 
            				relType="taxonomic" 
            				relName="hypernym"/>            				
            				
        </Synset>
        
        <Synset id="ex_ss-tesla-car">
            <Definition>
                <TextRepresentation languageIdentifier="eng" 
                					writtenText="A car from Tesla Motors company."/>
            </Definition>
            <MonolingualExternalRef externalSystem="cars" 
              						externalReference="7st row 2rd column in csv of origin"/>
              						
            <SynsetRelation target="ex_ss-electric-car"
            				relType="taxonomic" 
            				relName="hypernym"/>
        </Synset>        
                
	</Lexicon>	
	
			  	  
</LexicalResource>
